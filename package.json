{
  "name": "zenn-content",
  "version": "1.0.0",
  "description": "Zenn記事管理リポジトリ",
  "private": true,
  "scripts": {
    "new": "zenn new:article",
    "preview": "zenn preview",
    "new:book": "zenn new:book",
    "lint": "npm run lint:text && npm run lint:md && npm run lint:secret",
    "lint:text": "textlint 'articles/**/*.md'",
    "lint:text:fix": "textlint --fix 'articles/**/*.md'",
    "lint:md": "markdownlint-cli2 'articles/**/*.md'",
    "lint:secret": "secretlint '**/*'",
    "prepare": "lefthook install"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@secretlint/secretlint-rule-preset-recommend": "^9.3.4",
    "lefthook": "^2.0.15",
    "markdownlint-cli2": "^0.17.2",
    "prettier": "^3.5.3",
    "secretlint": "^11.3.0",
    "textlint": "^14.8.4",
    "textlint-rule-preset-ja-spacing": "^2.4.3",
    "textlint-rule-preset-ja-technical-writing": "^12.0.2",
    "zenn-cli": "^0.3.1"
  }
}
